<%- model_class = Lecture -%>
<div class="page-header">
  <h1>講義一覧</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>講義ID</th>
      <th>講義名</th>
      <th>作成日時</th>
      <th>編集 / 削除</th>
    </tr>
  </thead>
  <tbody>
    <% @lectures.each do |lecture| %>
      <tr>
        <td><%= link_to lecture.id, lecture_path(lecture) %></td>
        <td><%= lecture.name %></td>
        <td><%= lecture.created_at %></td>
        <td>
          <a class="btn btn-default btn-xs" href="/lectures/2/edit"><span class="translation_missing" title="translation missing: ja.helpers.links.edit">編集</span></a>
          <a data-confirm="Are you sure?" class="btn btn-xs btn-danger" rel="nofollow" data-method="delete" href="/lectures/2"><span class="translation_missing" title="translation missing: ja.helpers.links.destroy">削除</span></a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "新しい講義を作成する",
            new_lecture_path,
            :class => 'btn btn-primary' %>
