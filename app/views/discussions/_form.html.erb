<%= form_for [@lecture, @issue, @discussion], :html => { :class => "form-horizontal discussion" } do |f| %>

  <% if @discussion.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@discussion.errors.count, "error") %> prohibited this discussion from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @discussion.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <label class="control-label col-lg-2" for="discussion_name">タイトル</label>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <label class="control-label col-lg-2" for="discussion_description">内容</label>
    <div class="col-lg-10">
      <button type="button" id="start_rec" class="btn btn-xs btn-primary btn-rec">録音開始</button>
      <button type="button" id="cancel_rec" class="btn btn-xs btn-danger btn-rec">録音停止</button>
      <%= f.text_area :description, :class => 'form-control' %>
    </div>
    <%=f.error_span(:description) %>
  </div>
  <div class="form-group">
    <label class="control-label col-lg-2" for="discussion_issue_id">質問</label>
    <div class="col-lg-10">
      <%= f.text_field :issue_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:issue_id) %>
  </div>
  <div class="form-group">
    <label class="control-label col-lg-2" for="discussion_user_id">作成者</label>
    <div class="col-lg-10">
      <%= f.text_field :user_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:user_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                lecture_issue_discussions_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
