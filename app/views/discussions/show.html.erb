<%- model_class = Discussion -%>
<div class="page-header">
  <h1>ディスカッション</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @discussion.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @discussion.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:issue_id) %>:</strong></dt>
  <dd><%= @discussion.issue_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @discussion.user_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              lecture_issue_discussions_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_lecture_issue_discussion_path(discussion_id: @discussion.id), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              lecture_issue_discussion_path(discussion_id: @discussion.id),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
