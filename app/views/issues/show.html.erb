<%- model_class = Issue -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @issue.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
  <dd><%= @issue.status %></dd>
  <dt><strong><%= model_class.human_attribute_name(:lecture_id) %>:</strong></dt>
  <dd><%= @issue.lecture_id %></dd>
</dl>

<%= link_to 'Discussions', lecture_issue_discussions_path(issue_id: @issue.id) %>

<%= link_to t('.back', :default => t("helpers.links.back")),
              lecture_issues_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_lecture_issue_path(issue_id: @issue.id), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              lecture_issue_path(issue_id: @issue.id),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
